extends layout

block content
  h1 #{user._id}

  p #[strong Name:]
    a(href=user.name.url) #{user.name}
  p #[strong Email:] #{user.email}
  p #[strong Role:] #{user.role}

  hr
  p Do you really want to delete this User?
    
  form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=user._id )

      button.btn.btn-primary(type='submit') Delete