extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Name' name='name' required='true' value=(undefined===user ? '' : user.name) )
    div.form-group
      label(for='email') Email:
      input#email.form-control(type='text', placeholder='Email' name='email' required='true' value=(undefined===user ? '' : user.email) )

